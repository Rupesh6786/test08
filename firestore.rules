rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the requester is the admin.
    function isAdmin() {
      return request.auth.uid == 'ymwd0rW1wnNZkYlUR7cUi9dkd452';
    }
  
    // Users Collection:
    // - Logged-in users can create their own profile.
    // - Users can read and update their own profile.
    // - Admins can read any profile and delete users.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if isAdmin();
    }
    
    // Tournaments Collection:
    // - Anyone can view tournaments.
    // - Only admins can create, update, or delete them.
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Registrations Collection:
    // - Logged-in users can create their own registration.
    // - Users can read their own registrations.
    // - Admins can read all registrations and update payment status.
    match /registrations/{registrationId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow update: if isAdmin();
      allow delete: if false; // Disallow deleting registrations.
    }
    
    // Inquiries Collection:
    // - Anyone can submit a contact inquiry.
    // - Only admins can read or modify them.
    match /inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
