
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the requester is the admin.
    // The admin UID is hardcoded to match the application's logic.
    function isAdmin() {
      return request.auth.uid == 'ymwd0rW1wnNZkYlUR7cUi9dkd452';
    }

    // Users can manage their own profile.
    // Admins can manage any user profile.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }

    // Tournaments are publically readable by anyone.
    // Only admins can create, update, or delete tournaments.
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users can create their own registrations and read them.
    // Admins can read and update all registrations (e.g., to confirm payment).
    match /registrations/{registrationId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow update, delete: if isAdmin();
    }
  }
}
